{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": false,
    "jsx": "react",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./static/dist/",
    "lib": [
      "es6",
      "es7",
      "es2015",
      "es2015.promise",
      "es2015.iterable",
      "es2016",
      "es2017",
      "es2017.object",
      "es2018",
      "esnext.asynciterable",
      "scripthost",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "src": ["src"]
    }
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/**/*"
  ]
}
